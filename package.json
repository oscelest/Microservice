{
  "name": "microservice",
  "version": "1.0.0",
  "scripts": {
    "start-frontend": "next ./microservice-frontend -p process.env.PORT",
    "start-api": "nodemon -L -w './microservice-api' -w './microservice-shared/typescript' -e ts,json --exec \"tsc && node microservice-api/app.js\"",
    "start-websocket": "nodemon -L -w './microservice-websocket' -w './microservice-shared/typescript' -e ts,json --exec \"tsc && node microservice-websocket/app.js\"",
    "start-basket": "nodemon -L -w './microservice-basket' -w './microservice-shared/typescript' -e ts,json --exec \"tsc && node microservice-basket/app.js\"",
    "start-product": "nodemon -L -w './microservice-product' -w './microservice-shared/typescript' -e ts,json --exec \"tsc && node microservice-product/app.js\"",
    "start-checkout": "nodemon -L -w './microservice-checkout' -w './microservice-shared/typescript' -e ts,json --exec \"tsc && node microservice-checkout/app.js\"",
    "start-mail": "nodemon -L -w './microservice-mail' -w './microservice-shared/typescript' -e ts,json --exec \"tsc && node microservice-mail/app.js\""
  },
  "dependencies": {
    "@zeit/next-less": "^1.0.1",
    "@zeit/next-typescript": "^1.1.1",
    "amqplib": "^0.5.3",
    "bluebird": "^3.5.5",
    "express": "^4.17.0",
    "fs-extra": "^8.1.0",
    "jsonwebtoken": "^8.5.1",
    "less": "^3.0.4",
    "lodash": "^4.17.11",
    "method-override": "^3.0.0",
    "ms": "^2.1.2",
    "mysql2": "^1.6.5",
    "next": "^8.1.1-canary.63",
    "nodemon": "^1.19.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "socket.io-client": "^2.2.0",
    "socket.io": "^2.2.0",
    "typeorm": "^0.2.18",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/amqplib": "^0.5.13",
    "@types/bluebird": "^3.5.27",
    "@types/express": "^4.17.0",
    "@types/fs-extra": "^8.0.0",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/lodash": "^4.14.135",
    "@types/method-override": "0.0.31",
    "@types/node": "^12.0.10",
    "@types/react": "^16.8.22",
    "@types/react-dom": "^16.0.11",
    "@types/request-promise": "^4.1.44",
    "@types/socket.io": "^2.1.2",
    "@types/socket.io-client": "^1.4.32",
    "@types/uuid": "^3.4.4",
    "typescript": "^3.5.2"
  }
}
